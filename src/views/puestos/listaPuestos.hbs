<div class="d-flex justify-content-between">
    <div class="lista pt-4 d-flex flex-wrap justify-content-center pl-4 w-75">
        {{#each puestos}}
        <div class="card mr-4 mb-4" style="width: 18rem; max-height: 150px;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <h3 class="mb-0">{{descripcion}}</h3>
                </li>
                <li class="list-group-item">Pago por hora: <span style="font-weight: bold;">B/.{{pagoHora}}</span></li>
            </ul>
            <div class="card-body d-flex justify-content-center align-items-center p-2" style="height: 50px;">
                <a href="/puestos/editar/{{_id}}" class="card-link">Editar</a>
                <a href="/puestos/borrar/{{_id}}" class="card-link">Eliminar</a>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="menu pt-4 pr-4">
        <a href="/puestos/nuevo" class="d-flex flex-column align-items-center btn btn-primary btn-block mb-3">
            <img src="https://image.flaticon.com/icons/svg/2942/2942821.svg" class="mb-2" width="50px"
                alt="Nuevo cliente">
            <p class="mb-0">Nuevo puesto</p>
        </a>
        <a href="/empleados" class="d-flex flex-column align-items-center btn btn-success btn-block mb-3">
            <img src="https://image.flaticon.com/icons/svg/3094/3094700.svg" class="mb-2" width="50px" alt="Salir">
            <p class="mb-0">Lista de empleados</p>
        </a>
        <a href="/" class="d-flex flex-column align-items-center btn btn-light btn-block mb-3">
            <img src="https://image.flaticon.com/icons/svg/609/609803.svg" class="mb-2" width="50px" alt="Home">
            <p class="mb-0">Inicio</p>
        </a>
    </div>
</div>